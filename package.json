{
  "name": "bootstrap5-intellisense",
  "displayName": "Bootstrap 5 IntelliSense",
  "description": "Bootstrap 5 IntelliSense: Enhance Bootstrap development with CSS class autocompletion for efficient coding in Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "bootstrap",
    "bootstrap5",
    "css",
    "intellisense",
    "autocomplete",
    "vscode"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "html",
        "extensions": [
          ".html",
          ".htm"
        ]
      },
      {
        "id": "php",
        "extensions": [
          ".php"
        ]
      }
    ],
    "configurationDefaults": {
      "[html]": {
        "editor.quickSuggestions": {
          "strings": true
        }
      },
      "[php]": {
        "editor.quickSuggestions": {
          "strings": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
